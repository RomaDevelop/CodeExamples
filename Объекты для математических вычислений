/* 
Объекты для для вычислений.  
По каждому испытанию необходимо произвести разное количество расчётов. Каждый расчёт представляет из себя таблицу с разным количеством строк.
*/

class calc_row  // класс в котором хранится строка расчета
	{
	public:
		float Ni;     // исходные данные
		float fn;     // исходные данные
		float fv;     // исходные данные
		float f;      // исходные данные
		float Eci;    // исходные данные
		float DeltaA;  // результат расчёта
		float DeltaB;  // результат расчёта
		float DeltaC;  // результат расчёта
		float R_A;    // результат расчёта
		float R_B;    // результат расчёта
		float R_C;    // результат расчёта
		float R;      // результат расчёта

		calc_row();

		String AsStrings();         // вывод строки вычисления
		String Save();              // вывод строки вычисления в формате длля сохранения
		void Load(String data);     // запись считанных данных в строку вычисления
	};

class calc_table   // класс в котором хранится расчет
	{
	public:
		String name;
		String tip;
		std::vector<calc_row> rows;     // коллекция строк в контейнере vector

		calc_table();

		void Calc();        // метод запускающий расчёты
		String MaxInRows()  // определение максимального расчетного показателя в строках одной таблицы

		String AsStrings();      // вывод расчета
		String Save();           // вывод расчета в формате для сохранения и запись в файл
		void Load(String file);  // чтение данных и запись считанных данных в расчет
	};

std::vector<calc_table> tables;      // объявление коллекции расчетов в контейнере vector
